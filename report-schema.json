{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Patch Report Schema",
  "description": "Shared schema for AI Patch reports across Python, Node, and GitHub Action",
  "type": "object",
  "required": ["version", "timestamp", "target", "checks", "summary"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Report schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of report generation",
      "format": "date-time"
    },
    "target": {
      "type": "string",
      "enum": ["streaming", "retries", "cost", "trace", "all", "prod"],
      "description": "Target area that was checked"
    },
    "provider": {
      "type": "string",
      "description": "Provider being checked (openai-compatible, anthropic, gemini)"
    },
    "base_url": {
      "type": "string",
      "description": "Base URL being tested"
    },
    "checks": {
      "type": "object",
      "description": "Results of individual checks",
      "properties": {
        "streaming": {
          "$ref": "#/definitions/checkResult"
        },
        "retries": {
          "$ref": "#/definitions/checkResult"
        },
        "cost": {
          "$ref": "#/definitions/checkResult"
        },
        "trace": {
          "$ref": "#/definitions/checkResult"
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["status", "next_step"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "warning", "error"],
          "description": "Overall status (✅/⚠️/❌)"
        },
        "next_step": {
          "type": "string",
          "description": "Single recommended next step"
        },
        "duration_seconds": {
          "type": "number",
          "description": "Total duration of checks"
        }
      }
    }
  },
  "definitions": {
    "checkResult": {
      "type": "object",
      "required": ["status", "findings"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["pass", "warn", "fail", "skipped"]
        },
        "findings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["severity", "message"],
            "properties": {
              "severity": {
                "type": "string",
                "enum": ["info", "warning", "error"]
              },
              "message": {
                "type": "string"
              },
              "details": {
                "type": "object"
              }
            }
          }
        },
        "metrics": {
          "type": "object",
          "description": "Measured metrics for this check"
        }
      }
    }
  }
}
